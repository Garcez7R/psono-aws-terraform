# Psono Environment Variables - CHANGE THESE IN PRODUCTION!
# Copy this to .env and fill in real values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=psono
DB_USER=psono
DB_PASSWORD=changeme123

# ============================================
# PSONO SECURITY
# ============================================
# CRITICAL: Generate a strong secret key
# python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=change-this-to-a-random-secret-key-use-command-above

# Disable debug in production
DEBUG=False

# ============================================
# INITIAL ADMIN CREDENTIALS
# CHANGE IMMEDIATELY ON FIRST LOGIN!
# ============================================
PSONO_ADMIN_USERNAME=admin
PSONO_ADMIN_PASSWORD=ChangeMe@123

# ============================================
# CORS CONFIGURATION
# In production, restrict to your domain
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# ============================================
# NETWORK CONFIGURATION
# ============================================
# Allowed hostnames (restrict in production)
ALLOWED_HOSTS=*

# ============================================
# EMAIL CONFIGURATION
# Lab: console backend (prints to logs)
# Production: Configure real SMTP
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# TIMEZONE
# ============================================
TZ=UTC
